@model Tap2020Demo.Web.Areas.Account.Models.LoginViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="container">
    <div class="row">
        <div class="col-6">
            <form method="post" asp-controller="Authentication" asp-action="Login" asp-area="Account" asp-route-returnurl="@ViewData["ReturnUrl"]">
                <div class="text-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.SelectMany(_ => _.Value.Errors))
                        {
                            <li>
                                @error.ErrorMessage
                            </li>
                        }
                    </ul>
                </div>
                <div class="form-group">
                    <label for="Username">Username</label>
                    <input type="email" class="form-control" name="Username">
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" class="form-control" name="Password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>